{
  "name": "smart-contract-ride-sharing",
  "version": "1.0.0",
  "description": "基于智能合约的去中心化网约车支付系统",
  "main": "backend/api/server.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:order": "hardhat test --grep \"创建订单\"",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:mumbai": "hardhat run scripts/deploy.js --network mumbai",
    "deploy:polygon": "hardhat run scripts/deploy.js --network polygon",
    "deploy:bscTestnet": "hardhat run scripts/deploy.js --network bscTestnet",
    "init:local": "hardhat run scripts/initialize.js --network localhost",
    "test:order:local": "hardhat run scripts/testOrderCreation.js --network localhost",
    "setup:frontend": "node scripts/setupFrontend.js",
    "node": "hardhat node",
    "console": "hardhat console --network localhost",
    "server": "node backend/api/server.js",
    "server:dev": "nodemon backend/api/server.js",
    "server:full": "node backend/api/server.js --serve-frontend",
    "frontend": "node scripts/serveFrontend.js",
    "frontend:passenger": "cd frontend/passenger-app && npm start",
    "print:md": "node scripts/print-md.js",
    "frontend:driver": "cd frontend/driver-app && npm start",
    "get:address": "node scripts/get-contract-address.js",
    "check:deployment": "node scripts/check-and-continue-deployment.js",
    "test:usdc": "hardhat run scripts/test-usdc-balance.js --network localhost",
    "verify:deployment": "hardhat run scripts/verify-deployment.js --network localhost",
    "verify:env": "node scripts/verify-env-update.js",
    "check:node": "hardhat run scripts/check-node-status.js --network localhost",
    "check:platform": "hardhat run scripts/check-platform-wallet-activity.js --network localhost",
    "check:network": "node scripts/check-network-connection.js",
    "check:port": "node scripts/check-port-8545.js",
    "check:contracts": "node scripts/check-contract-deployment.js",
    "fix:contracts": "node scripts/fix-contract-address.js",
    "update:env": "node scripts/update-env-from-deployment.js",
    "fix:contracts:full": "scripts\\fix-contract-deployment-issue.bat",
    "after:restart": "scripts\\after-restart-setup.bat",
    "fix:metamask": "node scripts/fix-metamask-account-display.js",
    "diagnose:start": "scripts\\diagnose-start-dev-issue.bat",
    "reset:orders": "node scripts/reset-orders-and-balance.js",
    "reset:full": "node scripts/full-reset.js",
    "refresh:all": "node scripts/refresh-all.js",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "polygon",
    "smart-contracts",
    "ride-sharing",
    "web3",
    "defi"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "ipfs-http-client": "^56.0.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "redis": "^4.6.10",
    "web3modal": "^1.9.12",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@typechain/ethers-v6": "^0.4.3",
    "@typechain/hardhat": "^8.0.3",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "chai": "^4.3.8",
    "eslint": "^8.48.0",
    "hardhat": "^2.17.2",
    "hardhat-gas-reporter": "^1.0.9",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "solidity-coverage": "^0.8.4",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
